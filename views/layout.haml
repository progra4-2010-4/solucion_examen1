!!!
%html
  %head
    %meta{:charset=>"utf-8"}
    %title Slackernews
    %link{:rel=>"stylesheet", :href=>"/style.css"}
    %link{:rel=>"stylesheet", :href=>"/coderay.css"}
  %body
    %header 
      %a.branding{:href=>"/"} Slackernews
      %nav
        %a{:href=>"/"} Populares
        %a{:href=>"/newest"} Nuevas
        -if logged_in?
          %a{:href=>"/submit"} Agregar
          %a.userinfo{:href=>"/users/#{current_user.username}"}=current_user.username
          %a{:href=>"/logout"} logout
        -else 
          %a{:href=>"/login"} login
    =yield

